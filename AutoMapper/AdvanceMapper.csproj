<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

	  <!-- NuGet Package Properties -->
	  <PackageId>AdvancedObjectMapper</PackageId>
	  <Version>1.0.0</Version>
	  <Authors>Marghub</Authors>
	  <Description>A powerful, AutoMapper-like object mapping library for .NET 8+ applications with fluent configuration and dependency injection support.</Description>
	  <PackageTags>mapper;automapper;object-mapping;dotnet;csharp</PackageTags>
	  <PackageProjectUrl>https://github.com/yourusername/AdvancedObjectMapper</PackageProjectUrl>
	  <RepositoryUrl>https://github.com/yourusername/AdvancedObjectMapper</RepositoryUrl>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <PackageReadmeFile>README.md</PackageReadmeFile>
	  <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	  <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="8.0.0" />
  </ItemGroup>
	
	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="\" />
	</ItemGroup>
</Project>
